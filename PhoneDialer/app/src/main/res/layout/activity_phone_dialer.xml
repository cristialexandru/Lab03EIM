<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_phone_dialer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ro.pub.cs.systems.eim.lab03.phonedialer.PhoneDialerActivity">
    <EditText
        android:id="@+id/edit_text_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:enabled="false"
        android:gravity="center"/>


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:rowCount="8"
        android:columnCount="3" >

        <ImageButton
            android:id="@+id/button_backspace"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_row="0"
            android:layout_column="2"
            android:src="@drawable/backspace"
            android:layout_gravity="center" />

        <Space
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/button_number_1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_row="2"
            android:layout_column="0"
            android:text="@string/number_1" />

        <Button
            android:id="@+id/button_number_2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_row="2"
            android:layout_column="1"
            android:text="@string/number_2" />

        <Button
            android:id="@+id/button_number_3"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_row="2"
            android:layout_column="2"
            android:text="@string/number_3" />

        <Button
            android:id="@+id/button_number_4"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_row="3"
            android:layout_column="0"
            android:text="@string/number_4" />

        <Button
            android:id="@+id/button_number_5"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_row="3"
            android:layout_column="1"
            android:text="@string/number_5" />

        <Button
            android:id="@+id/button_number_6"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_row="3"
            android:layout_column="2"
            android:text="@string/number_6" />

        <Button
            android:id="@+id/button_number_7"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_row="4"
            android:layout_column="0"
            android:text="@string/number_7" />

        <Button
            android:id="@+id/button_number_8"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_row="4"
            android:layout_column="1"
            android:text="@string/number_8" />

        <Button
            android:id="@+id/button_number_9"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_row="4"
            android:layout_column="2"
            android:text="@string/number_9" />

        <Button
            android:id="@+id/button_character_star"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_row="5"
            android:layout_column="0"
            android:text="@string/star" />

        <Button
            android:id="@+id/button_number_0"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_row="5"
            android:layout_column="1"
            android:text="@string/number_0" />

        <Button
            android:id="@+id/button_character_pound"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_row="5"
            android:layout_column="2"
            android:text="@string/pound" />

        <ImageButton
            android:id="@+id/button_call"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="7"
            android:layout_column="0"
            android:src="@drawable/call"
            android:layout_gravity="center"/>

        <ImageButton
            android:id="@+id/button_hangup"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="7"
            android:layout_column="2"
            android:src="@drawable/hangup"
            android:layout_gravity="center"/>

    </GridLayout>


</LinearLayout>
